---
import Layout from '@/layouts/Layout.astro';
import Card from '@/components/countries/Card.astro';
import Join from '@/components/Join';
const countries = await import('@/data/countries.json');
countries.default.sort((a, b) => {
  if (a.slug === 'hungary') return -1;
  if (b.slug === 'hungary') return 1;
  return 0;
});
---

<Layout title='Welcome to Astro.'>
	<div class='container pt-[72px] lg:pt-25'>
		<div class='mb-8 md:mb-14 lg:mb-20'>
			<span class='section-caption'>Eastern Europe</span>
			<div class='flex flex-col lg:flex-row gap-8 lg:gap-10 mb-10 md:mb-16 lg:mb-25'>
				<h1 class='text-[29px] leading-[38px] text-xl md:text-2xl xl:text-3xl max-w-[587px] lg:max-w-full'>Countries We are <span class='text-gray-3'>Reaching</span></h1>
				<p class='max-w-[590px]'>The Gospel is already being spread in these countries through our mission and with your help. Only together and with God's help can we expand this list.</p>
			</div>
		</div>
		<ul class='grid md:grid-cols-2 gap-6 sm:gap-5 lg:gap-8 xl:gap-12'>
			{countries.default.map((item, index) => <Card slug={item.slug} title={item.title} index={index} city={item.countryContent.city} description={item.countryContent.description} image={item.featuredImage.node.mediaItemUrl} />)}
		</ul>
	</div>
	<Join client:load />
</Layout>
